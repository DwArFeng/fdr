<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
        xmlns="http://www.springframework.org/schema/beans"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://dubbo.apache.org/schema/dubbo
        http://dubbo.apache.org/schema/dubbo/dubbo.xsd"
>
    <dubbo:application name="fdr-node">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>

    <!-- zookeeper注册中心 -->
    <dubbo:registry address="${dubbo.registry.zookeeper.address}" timeout="${dubbo.registry.zookeeper.timeout}"/>

    <!-- dubbo协议 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.dubbo.port}" host="${dubbo.protocol.dubbo.host}"
                    dispatcher="message" threadpool="fixed" threads="100"/>

    <!-- 向注册中心注册暴露服务地址,注册服务 -->
    <!--suppress DeprecatedClassUsageInspection -->
    <dubbo:service
            interface="com.dwarfeng.fdr.stack.service.MappingLookupService"
            ref="mappingLookupServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.fdr.stack.service.PersistenceValueMappingLookupService"
            ref="persistenceValueMappingLookupServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.fdr.stack.service.FilteredValueMappingLookupService"
            ref="filteredValueMappingLookupServiceImpl"
            group="${dubbo.provider.group}"
    />
    <dubbo:service
            interface="com.dwarfeng.fdr.stack.service.TriggeredValueMappingLookupService"
            ref="triggeredValueMappingLookupServiceImpl"
            group="${dubbo.provider.group}"
    />

    <!-- snowflake -->
    <dubbo:reference
            id="longIdService"
            interface="com.dwarfeng.sfds.stack.service.LongIdService"
            group="${dubbo.consumer.snowflake.group}"
    />
</beans>
